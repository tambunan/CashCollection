<?xml version="1.0" encoding="utf-8"?>
   
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        android:padding="5dip"
        android:background="@drawable/bg">
        
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:background="#80FFFFFF"
            android:orientation="horizontal" >

        <TextView
            android:id="@+id/os"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Collected  "
            android:paddingLeft="10dip"
            android:textColor="#000000"
            android:textColorHint="#DDDDDD"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
                android:id="@+id/outstandingcontent"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="Rp. 0"
                android:textColor="#000000"
                android:padding="0dip"
                android:layout_marginLeft="0dip"
                android:textSize="30sp"
                android:textStyle="bold" >
        </TextView>
        

    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#80FFFFFF"
            android:orientation="horizontal"
            >

        <TextView
            android:id="@+id/texttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="10dip"
            android:paddingRight="5dip"
            android:text="Virtual Account "
            android:textColor="#000000"
            android:textColorHint="#DDDDDD"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/virtualaccount"
            android:layout_width="143dp"
            android:layout_height="30dip"
            android:layout_marginLeft="10dip"
            android:gravity="right"
            android:text="123456789"
            android:textColor="#000000"
            android:textSize="17sp"
            android:textStyle="bold" />
        
    </LinearLayout>
    
       <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:background="#80FFFFFF"
            android:orientation="vertical"
            android:id="@+id/cek" >

   <!--       <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Transaksi :"
                android:textColor="#000000"
                android:textColorHint="#DDDDDD"
                android:textSize="18sp"/>



        <TextView
                android:id="@+id/total_trx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text=""
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginLeft="15dip"
                android:layout_gravity="left">
        </TextView> -->

           <Button
               android:id="@+id/btndeposit"
               android:layout_width="150dip"
               android:layout_height="40dip"
               android:layout_margin="10dip"
               android:background="@layout/button_green"
               android:layout_alignParentRight="true"
               android:text="Deposit Point"
               android:textColor="#ffffff"
               android:textSize="15dip" />

    </RelativeLayout> 

    <RelativeLayout
            android:id="@+id/test"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/cek"
            android:layout_gravity="top"
            android:gravity="top">

        <ListView
                android:id="@+id/listdeposit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_alignParentTop="true"
                android:gravity="top">

        </ListView>
   
    </RelativeLayout>
    
   
    
</LinearLayout>

   
    
