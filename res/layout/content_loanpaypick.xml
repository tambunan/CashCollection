<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical" >

    <!-- From Label -->
    <TextView
            android:id="@+id/labelcardno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dip"
            android:layout_alignParentLeft="true"
            android:text="No Tagihan   "
            android:textColor="#000000"
    />
    <TextView
        android:id="@+id/cardno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1234567890"
        android:paddingBottom="3dip"
        android:layout_toRightOf="@+id/labelcardno"
        android:paddingTop="2dip"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="16dip" />



    <!-- Mail date -->
    <TextView
            android:id="@+id/labelname"
            android:layout_below="@+id/labelcardno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dip"
            android:layout_alignParentLeft="true"
            android:text="Nama             "
            android:textColor="#000000"
    />
    <TextView
        android:id="@+id/cardname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardno"
        android:text="Duma Tambunan"
        android:layout_toRightOf="@+id/labelcardno"
        android:textColor="#000000"
        android:textSize="16dip"
        />
    <TextView
        android:id="@+id/mobileno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/labelhp"
        android:layout_below="@+id/cardname"
        android:text="081311612472"
        android:padding="3dip"
        android:textColor="#000000"
        android:textSize="16dip"
        />

    <TextView
        android:id="@+id/labeladdress1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/labelhp"
        android:layout_below="@+id/labelhp"
        android:padding="3dip"
        android:text="Alamat        "
        android:textColor="#000000" />

    <TextView
        android:id="@+id/address1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelhp"
        android:paddingBottom="3dip"
        android:layout_toRightOf="@+id/labeladdress1"
        android:padding="3dip"
        android:maxLines="4" 
        android:singleLine="false" 
        android:text="Jl Gereja HKBP No 40"
        android:paddingTop="3dip"
        android:textColor="#000000"
        android:textSize="16dip" />

    <TextView
        android:id="@+id/labelinstallment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/address1"
        android:layout_toLeftOf="@+id/cardname"
        android:padding="3dip"
        android:text="Installment "
        android:textColor="#000000" />

    <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp 15.000"
            android:layout_below="@+id/address1"
            android:paddingTop="0dip"
            android:layout_toRightOf="@+id/labelinstallment"
            android:textColor="#668f3c"
            android:textSize="20dip"
            android:textStyle="bold" />
